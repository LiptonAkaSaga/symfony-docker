{% extends 'base.html.twig' %}

{% block title %}Lista artykułów{% endblock %}

{% block body %}
    <h1>Lista artykułów</h1>

    <a href="{{ path('article_new') }}" class="btn btn-success mb-3">Dodaj nowy artykuł</a>

    <div class="row">
        {% for article in articles %}
            <div class="col-md-6 mb-4">
                <div class="card">
                    {% if article.images|length > 0 %}
                        <img src="{{ asset(article.images|first.path) }}" class="card-img-top" alt="{{ article.images|first.alt }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('article_show', {'id': article.id}) }}">
                                {{ article.title }}
                            </a>
                        </h5>
                        <p class="card-text">{{ article.content|slice(0, 100) }}...</p>
                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary">Edytuj</a>
                        <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć ten artykuł?')">Usuń</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
