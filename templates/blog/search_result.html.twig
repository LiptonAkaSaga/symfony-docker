{% extends 'base.html.twig' %}

{% block title %}Wyniki wyszukiwania{% endblock %}

{% block body %}
    <h1>Wyniki wyszukiwania dla: "{{ query }}"</h1>

    {% if articles|length > 0 %}
        <div class="row">
            {% for article in articles %}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content|slice(0, 100) }}...</p>
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">Czytaj więcej</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Nie znaleziono artykułów pasujących do zapytania.</p>
    {% endif %}

    <a href="{{ path('search_articles', {'search_slug': query}) }}" class="btn btn-secondary">Odśwież wyniki</a>
{% endblock %}
