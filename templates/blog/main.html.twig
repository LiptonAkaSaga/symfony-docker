{% extends 'base.html.twig' %}
{% block body %}
    <head>
        <link rel="stylesheet" href="/styles/style.css">
    </head>
    <a href="{{ path('new_page') }}" class="btn btn-primary pull-right"><span class="fa fa-plus-circle"></span>
        <button type="submit" class="btn btn-primary">Create Article</button></a>
    </a>
    <h1>All articles</h1>

<div class="card-container">
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="https://localhost/artykuly/{{ article.id }}">{{ article.title }}</a><br></td>
                <td>
                   <a href="{{ path('edit_article', {'id': article.id}) }}">
                        <button type="submit" class="btn btn-primary">Edit</button></a>
                    <form action="{{ path('delete_article', {'id': article.id}) }}"
                              method="post" onsubmit="return confirm('Are you sure you want to delete this article?')" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

