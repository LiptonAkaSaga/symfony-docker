{% extends 'base.html.twig' %}

{% block title %}Strona główna{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>Witaj na naszym blogu!</h1>

            {% if lastArticle %}
                <h2>Ostatni artykuł</h2>
                <div class="card mb-4">
                    <div class="card-body">
                        <h3 class="card-title">{{ lastArticle.title }}</h3>
                        <p class="card-text">{{ lastArticle.content|slice(0, 200) }}...</p>
                        <a href="{{ path('article_show', {'id': lastArticle.id}) }}" class="btn btn-primary">Czytaj więcej</a>
                    </div>
                </div>
            {% else %}
                <p>Brak artykułów do wyświetlenia.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
